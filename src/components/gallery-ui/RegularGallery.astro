---
import { cn } from "@/lib/utils";

interface Props {
    className?: string;
    class?: string;
}

const { className, class: clazz } = Astro.props;
---

<div
    class={cn(
        "grid grid-cols-1 md:grid-cols-3 gap-6 w-full max-w-6xl mx-auto px-4 max-w-[90%]",
        className,
        clazz,
    )}
>
    <slot />
</div>
